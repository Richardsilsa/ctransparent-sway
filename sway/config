# Autostart
exec wlsunset -T 3000 -t 1600 

## Theming
# Sway
gaps				inner 6
gaps				outer 2
client.focused			#e0e0e0 #e0e0e0 #111111 #e0e0e0
font				pango: GoogleSans 10
default_border			pixel 2

# Wallpaper
set $wall	wall.png
output * bg	$wall fill

# Gtk
set $gtk	ChromeOS-dark-compact
set $cursor	Pop
set $icon	Tela-dark
set $font	GoogleSans 10
set $mono	SourceCodePro Regular 10

# Set gtk
exec gsettings set org.gnome.desktop.interface gtk-theme		$gtk
exec gsettings set org.gnome.desktop.interface cursor-theme		$cursor
exec gsettings set org.gnome.desktop.interface icon-theme		$icon	
exec gsettings set org.gnome.desktop.interface font-name		$font
exec gsettings set org.gnome.desktop.interface monospace-font-name	$mono

# Suspension
set $scrtm	120
set $lcktm	240

exec swayidle -w \
	timeout		$scrtm 'swaylock -f -c 000000' \
	timeout		$lcktm 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
	before-sleep 'swaylock -f -c 000000'

## Variables
# Keyboard shortcuts
set $mod	Mod4
set $left	j
set $down	k
set $up		i
set $right	l

# Apps
set $console	alacritty
set $menu	fuzzel -f Googlesans -l 1 -b 00000050 -s 00000050 -r 16 -C e0e0e0ff -B 2 -t e0e0e0ff -m ffffffff -I 
set $app1	firefox
set $app2	$console
set $app3	thunar
set $app4	code-oss
set $app5	discord

## Devices
# Touchpad
input "2:7:SynPS/2_Synaptics_TouchPad" {
	dwt 			enabled
	tap			enabled
	natural_scroll		enabled
	middle_emulation	enabled
}

# Keyboard
input '1:1:AT_Translated_Set_2_keyboard' xkb_layout br

## Shortcuts
# Power
bindsym $mod+Alt+p	exec poweroff
bindsym $mod+Alt+r	exec reboot

# Print screen
bindsym $mod+Shift+g	exec grim && notify-send Print!

# Volume
bindsym $mod+Shift+i	exec pamixer -i 5
bindsym $mod+Shift+k	exec pamixer -d 5

# Brightness
bindsym $mod+Shift+l	exec light -A 5
bindsym $mod+Shift+j	exec light -U 5

# Sway
bindsym $mod+Shift+r	reload
bindsym $mod+Shift+q	exec swaynag -t warning -m 'Logout?' -b 'Yes' 'swaymsg exit'
bindsym $mod+r		exec $menu

# Move windows
bindsym $mod+$left	move left
bindsym $mod+$down	mode down
bindsym $mod+$up	move up
bindsym $mod+$right	move right

# Change workspace
bindsym $mod+1		workspace number 1
bindsym $mod+2		workspace number 2
bindsym $mod+3		workspace number 3
bindsym $mod+4		workspace number 4
bindsym $mod+5		workspace number 5
bindsym $mod+6		workspace number 6
bindsym $mod+7		workspace number 7
bindsym $mod+8		workspace number 8
bindsym $mod+9		workspace number 9

# Move to workspace
bindsym $mod+Shift+1	move container to workspace number 1
bindsym $mod+Shift+2	move container to workspace number 2
bindsym $mod+Shift+3	move container to workspace number 3
bindsym $mod+Shift+4	move container to workspace number 4
bindsym $mod+Shift+5	move container to workspace number 5
bindsym $mod+Shift+6	move container to workspace number 6
bindsym $mod+Shift+7	move container to workspace number 7
bindsym $mod+Shift+8	move container to workspace number 8
bindsym $mod+Shift+9	move container to workspace number 9

# Exec apps
bindsym $mod+Alt+1	exec $app1
bindsym $mod+Alt+2	exec $app2
bindsym $mod+Alt+3	exec $app3
bindsym $mod+Alt+4	exec $app4
bindsym $mod+Alt+5	exec $app5

# Nav
bindsym $mod+q		kill
bindsym $mod+f		fullscreen
bindsym $mod+Shift+f	floating toggle

# Move floating
floating_modifier 	$mod normal

# Resize
bindsym $mod+s		mode 'resize'

mode 'resize' {
	bindsym $left	resize shrink width	20px
	bindsym $down	resize grow height	20px
	bindsym $up	resize shrink height 	20px
	bindsym $right	resize grow width	20px
	bindsym		Return mode "default"
	bindsym		Escape mode "default"
}

# Status bar
bar {
	swaybar_command	waybar
}

include /etc/sway/config.d/*
